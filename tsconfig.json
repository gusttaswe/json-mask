{
    "compilerOptions": {
      "baseUrl": "./src",
      "target": "es5",
      "module": "commonjs",
      "declaration": true,
      "outDir": "./dist",
      "strict": true,
      "paths": {
        "@shared/*": ["shared/*"],
        "@modules/*": ["modules/*"],
        "@services/*": ["services/*"],
        "@domains/*": ["domains/*"]
      },
    },
    "include": ["src"],
    "exclude": ["node_modules", "**/__tests__/*"]
}